@model TaxiSluzba.Models.Voznja

@{
    ViewBag.Title = "KomentarVozacaNeuspesnaVoznja";
}

<h2>Komentar za neuspesnu voznju</h2>
<form action="/User/KomentarVozac" method="post">
    <table>
        <tr>
            <td>Opis: </td>
            <td><textarea name="comment" rows="8" cols="100"></textarea> </td>
        </tr>
        <tr>
            <td colspan="2" align="center"><input type="submit" value="Ostavi komentar" onclick="alert('Komentar je ostavljen')"></td>
        </tr>
    </table>
    <input type="hidden" name="datumVoznje" value="@Model.DatumIvremePorudz">
    <input type="hidden" name="usernameMusterija" value="@Model.Musterija.KorisnickoIme">
</form>

