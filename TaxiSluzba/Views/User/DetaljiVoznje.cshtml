@model TaxiSluzba.Models.Voznja

@{
    ViewBag.Title = "DetaljiVoznje";
}
<html>
<head>
    <script>
            function goBack() {
                window.history.back();
            }
    </script>
    <style>
        body {
            background-color:lightsalmon;
        }
    </style>
</head>
<body>
    <h2>Detalji voznje</h2>
    <table>
        <tr>
            <td><b>Musterija:</b></td>
            <td>@Model.Musterija.KorisnickoIme</td>
        </tr>
        <tr>
            <td><b>Datum i vreme:</b></td>
            <td>@Model.DatumIvremePorudz.ToString()</td>
        </tr>
        <tr>
            <td><b>Vozac:</b></td>
            <td>@Model.vozac.KorisnickoIme</td>
        </tr>
        <tr>
            <td><b>Dispecer:</b></td>
            <td>@Model.dispecer.KorisnickoIme</td>
        </tr>
        <tr>
            <td><b>Polazna lokacija:</b></td>
            <td>@Model.DolaznaLokacija.Adress.Ulica @Model.DolaznaLokacija.Adress.Broj, @Model.DolaznaLokacija.Adress.Grad</td>
        </tr>
        <tr>
            <td><b>Dolazna lokacija:</b></td>
            <td>@Model.Odrediste.Adress.Ulica @Model.Odrediste.Adress.Broj, @Model.Odrediste.Adress.Grad</td>
        </tr>
        <tr>
            <td><b>Komentar:</b></td>
            <td>@Model.komentar.Opis</td>
        </tr>
        <tr>
            <td><b>Ocena:</b></td>
            <td>@Model.komentar.OcenaVoznje.ToString()</td>
        </tr>
        <tr>
            <td><b>Status voznje:</b></td>
            <td>@Model.Status.ToString()</td>
        </tr>
        <tr>
            <td><b>Iznos:</b></td>
            <td>@Model.Iznos</td>
        </tr>
    </table>
    <button onclick="goBack()">Nazad</button>
</body>
</html>






