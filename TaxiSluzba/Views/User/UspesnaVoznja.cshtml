@model TaxiSluzba.Models.Voznja

@{
    ViewBag.Title = "UspesnaVoznja";
}
<head>
    <style>
        body {
            background-color:lightcyan;
        }
    </style>
</head>
<body>
    <h2>Voznja uspesno izvrsena</h2>
    <form action="/User/ZavrsiVoznju" method="post">
        <table>
            <tr>
                <td colspan="2" align="center"><input type="text" value="Odrediste:" readonly></td>
            </tr>
            <tr>
                <td>Ulica:</td>
                <td><input type="text" name="ulica"></td>
            </tr>
            <tr>
                <td>Broj:</td>
                <td><input type="text" name="broj"></td>
            </tr>
            <tr>
                <td>Grad:</td>
                <td><input type="text" name="grad"></td>
            </tr>
            <tr>
                <td>Postanski broj:</td>
                <td><input type="text" name="postBroj"></td>
            </tr>
            <tr>
                <td>Iznos:</td>
                <td><input type="text" name="iznos"></td>
            </tr>
            <tr>
                <td colspan="2" align="center"><input type="submit" value="Zavrsi"></td>
            </tr>
        </table>
        <input type="hidden" name="datumVoznje" value="@Model.DatumIvremePorudz">
        <input type="hidden" name="usernameMusterija" value="@Model.Musterija.KorisnickoIme">
        <input type="hidden" name="usernameVozac" value="@Model.vozac.KorisnickoIme">
    </form>
</body>
